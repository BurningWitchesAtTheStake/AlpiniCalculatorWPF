                            <Button HorizontalAlignment="Left" Content="½ часть"  ToolTip="Разделить текущий результат на 2" FontSize="15" Margin="0 0 0 0" Click="Intenso_2x_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
