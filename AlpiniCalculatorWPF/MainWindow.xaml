    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20" Background="#090909">
            <MenuItem Header="Справка" FontSize="10" Height="20" Background="#090909" ToolTip="О программе" Click="AboutMenuItem_Click"/>
            <MenuItem Header="Конфигурация" FontSize="10" Height="20" Background="#090909" ToolTip="Изменение рецептов смесей" Click="ConfigMenuItem_Click"/>
        </Menu>
        <Grid Background="#090909">
        <Image Source="logo.png" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="25 15"/>
        <StackPanel Orientation="Horizontal">
            <Border Background="#090909" Width="210" Height="400" Padding="20 20 20 0" Margin="29 0 0 0" >
                <StackPanel>
                    <TextBlock Text="INTENSO" Foreground="#C6C6C6" FontFamily="Verdana" FontSize="30" FontWeight="Bold" Margin="0 0 0 0"/>
                    <TextBox x:Name="IntensoTotalWeight" materialDesign:HintAssist.Hint="Введите число" KeyDown="Intenso_Input" Foreground="#C6C6C6" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10"/>
                    <Grid Height="30" Margin="0 7.5">
                        <TextBlock HorizontalAlignment="Left" Text="Сидамо" Foreground="#677953" FontFamily="Verdana" FontSize="20"/>
                        <TextBlock x:Name="IntensoSidamo" HorizontalAlignment="Right" Text="" Foreground="#C6C6C6" FontFamily="Verdana" FontSize="15" Margin="0 5 0 0"/>
                    </Grid>
                    <Grid Height="30" Margin="0 7.5">
                        <TextBlock HorizontalAlignment="Left" Text="Сантос" Foreground="#677953" FontFamily="Verdana" FontSize="20"/>
                        <TextBlock x:Name="IntensoSantos" HorizontalAlignment="Right" Text="" Foreground="#C6C6C6" FontFamily="Verdana" FontSize="15" Margin="0 5 0 0"/>
                    </Grid>
                    <Grid Height="30" Margin="0 7.5">
                        <TextBlock HorizontalAlignment="Left" Text="Можиана" Foreground="#677953" FontFamily="Verdana" FontSize="20"/>
                        <TextBlock x:Name="IntensoMogiana" HorizontalAlignment="Right" Text="" Foreground="#C6C6C6" FontFamily="Verdana" FontSize="15" Margin="0 5 0 0"/>
                    </Grid>
                    <Grid Height="30" Margin="0 7.5">
                        <TextBlock HorizontalAlignment="Left" Text="Робуста" Foreground="#677953" FontFamily="Verdana" FontSize="20"/>
                        <TextBlock x:Name="IntensoRobusta" HorizontalAlignment="Right" Text="" Foreground="#C6C6C6" FontFamily="Verdana" FontSize="15" Margin="0 5 0 0"/>
                    </Grid>
                        <Line X1="0" Y1="0" X2="210" Y2="0" Stroke="#C6C6C6" StrokeThickness="2" Margin="0 5"/>
                        <TextBox Margin="0 7.5" Width="170" HorizontalAlignment="Left" x:Name="IntensoDivide" materialDesign:HintAssist.Hint="Число деления" KeyDown="Intenso_Divide_Input" Foreground="#C6C6C6" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                        <TextBlock x:Name="IntensoX" Margin="0 7.5" FontSize="20" Text="" Foreground="#677953"/>
